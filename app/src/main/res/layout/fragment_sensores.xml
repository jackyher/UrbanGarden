<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primaryLight"
    android:id="@+id/sensoresFragment"
    tools:context=".ui.sensores.SensoresFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginEnd="24dp"
        android:gravity="center_vertical">

        <LinearLayout
            android:id="@+id/Premium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_premium"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/prueba"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Prueba Urban Garden Premium"
                    android:textSize="16sp"
                    android:textStyle="bold">
                </TextView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="15 días gratis"
                    android:textSize="14sp">
                </TextView>

            </LinearLayout>

            <ImageView
                android:id="@+id/rectangle_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginEnd="16dp"
                android:src="@drawable/ic_home_corona">
            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/Guia"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/rounded_premium"
            android:backgroundTint="@color/greenrare"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Guía de cuidados"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textAlignment="center">
            </TextView>

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="El conocimiento sobre plantas es poder"
                android:textSize="15sp"
                android:textStyle="bold"
                android:textColor="@color/grayDark"
                android:textAlignment="center">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/clima"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="16dp">

            <ImageView
                android:id="@+id/imagen_clima"
                android:layout_width="160dp"
                android:layout_height="160dp"
                android:src="@drawable/img_clima">
            </ImageView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Puebla, Puebla"
                android:textColor="@color/primary"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginTop="8dp">
            </TextView>

            <TextView
                android:id="@+id/tvGradosC"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="23°C"
                android:textColor="@color/grayDark"
                android:textSize="15sp"
                android:textStyle="bold">
            </TextView>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/NumSensores"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:background="@drawable/rounded_premium"
            android:backgroundTint="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Sensor 1 (Apio)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary">
            </TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/img_next_green"
                android:layout_marginStart="22dp">
            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_premium"
            android:backgroundTint="@color/white"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="270dp"
                android:layout_height="wrap_content"
                android:text="Sensor 2 (Menta)"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary">
            </TextView>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/img_next_green"
                android:layout_marginStart="22dp">
            </ImageView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="@drawable/rounded_transparente"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:padding="16dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Añadir sensor   +"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/primary"
                android:gravity="center">
            </TextView>

        </LinearLayout>

    </LinearLayout>

</FrameLayout>